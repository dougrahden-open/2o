FROM jflachman/llama-cpp-python:latest

WORKDIR /app

# Full SSL bypass environment variables
ENV PYTHONHTTPSVERIFY=0
ENV CURL_CA_BUNDLE=""
ENV REQUESTS_CA_BUNDLE=""

# Configure pip to ignore SSL completely
RUN pip config set global.trusted-host "pypi.org files.pythonhosted.org pypi.python.org"
RUN pip config set global.cert /dev/null

# Install our additional packages with comprehensive SSL bypass
RUN pip install --no-cache-dir \
    --trusted-host pypi.org \
    --trusted-host files.pythonhosted.org \
    --trusted-host pypi.python.org \
    --disable-pip-version-check \
    sentence-transformers==2.7.0 \
    chromadb==0.4.24 \
    PyPDF2==3.0.1 \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    transformers==4.36.0 \
    accelerate==0.25.0 \
    jinja2==3.1.2 \
    python-multipart==0.0.6

# Copy our application
COPY scripts/ ./scripts/
COPY models/ ./models/
COPY Engine/ ./Engine/

ENV MAUROGPT2_BASE=/app
EXPOSE 8000
CMD ["python", "scripts/maurogpt2-model.py"]
