FROM nvidia/cuda:11.8.0-cudnn8-devel-ubuntu22.04

WORKDIR /app

# Disable SSL verification globally
ENV PYTHONHTTPSVERIFY=0
ENV CURL_CA_BUNDLE=""
ENV REQUESTS_CA_BUNDLE=""

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    cmake \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

RUN ln -s /usr/bin/python3 /usr/bin/python

# Configure pip to ignore SSL completely
RUN pip config set global.trusted-host "pypi.org files.pythonhosted.org pypi.python.org download.pytorch.org"
RUN pip config set global.cert /dev/null

# Install PyTorch with all SSL bypasses
RUN pip install --no-cache-dir \
    --trusted-host pypi.org \
    --trusted-host files.pythonhosted.org \
    --trusted-host pypi.python.org \
    --trusted-host download.pytorch.org \
    --disable-pip-version-check \
    torch==2.1.0 \
    torchvision==0.16.0 \
    torchaudio==2.1.0 \
    --index-url https://download.pytorch.org/whl/cu118

# Install other packages with SSL bypass
RUN pip install --no-cache-dir \
    --trusted-host pypi.org \
    --trusted-host files.pythonhosted.org \
    --trusted-host pypi.python.org \
    sentence-transformers==2.7.0 \
    chromadb==0.4.24 \
    PyPDF2==3.0.1 \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    transformers==4.36.0 \
    accelerate==0.25.0 \
    llama-cpp-python \
    jinja2==3.1.2 \
    python-multipart==0.0.6

COPY scripts/ ./scripts/
COPY models/ ./models/
COPY Engine/ ./Engine/

ENV MAUROGPT2_BASE=/app
EXPOSE 8000
CMD ["python", "scripts/maurogpt2-model.py"]
